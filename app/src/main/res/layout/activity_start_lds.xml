<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggg"
    android:paddingLeft="5dp"
    tools:context=".actLDS.StartActivityLDS">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="275dp"
        android:layout_height="85dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/recten" />

    <TextView
        android:id="@+id/textViewSSSS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 2000"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <android.widget.Button
        android:id="@+id/buttonSG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recten"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Start the Game"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.241" />

    <android.widget.Button
        android:id="@+id/buttonSW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/recten"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="start game wheel"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/buttonSG"
        app:layout_constraintStart_toStartOf="@+id/buttonSG"
        app:layout_constraintTop_toBottomOf="@+id/buttonSG" />

    <android.widget.Button
        android:id="@+id/buttonSE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/recten"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text=" exit the game"
        android:textColor="#FFFDFD"
        app:layout_constraintEnd_toEndOf="@+id/buttonSW"
        app:layout_constraintStart_toStartOf="@+id/buttonSW"
        app:layout_constraintTop_toBottomOf="@+id/buttonSW" />
</androidx.constraintlayout.widget.ConstraintLayout>